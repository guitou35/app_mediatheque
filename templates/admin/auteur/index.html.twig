{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
<div class="container ">
    <h1 class="mx-auto text-center text-4xl p-4 text-theme-blue font-semibold">Gestion des auteurs</h1>
    {% include 'components/_alerts.html.twig' %}

   <p class="mx-auto p-3 text-center"> <a href="{{ path('auteur_new') }}" class=" bttn"> Ajouter</a></p>

    <div class="flex md:flex-col text-left grid mb-2">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 text-theme-blue">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-center  font-medium   tracking-wider">
                                Id
                            </th>
                            <th scope="col" class="px-6 py-3 text-center  font-medium   tracking-wider">
                                Nom
                            </th>
                            <th scope="col" class="px-6 py-3 text-center font-medium  tracking-wider">
                                Prenom
                            </th>
                            <th scope="col" class="px-6 py-3 text-center font-medium  tracking-wider">
                                Description
                            </th>

                                <th scope="col" class="px-6 py-3 text-center font-medium  tracking-wider">
                                    Management
                                </th>

                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                        {% for auteur in auteurs %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        {{ auteur.id }}
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900 text-center">{{ auteur.nom }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    {{ auteur.prenom }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                    {{ auteur.description }}
                                </td>
                                    <td class=" whitespace-nowrap  ">
                                        <div class="flex flex-wrap flex-row items-center justify-center">
                                            <div class="bttn-blue mx-1 ">
                                                <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">Editer</a>
                                            </div>
                                            {{ include('admin/auteur/_delete_form.html.twig') }}
                                        </div>
                                    </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Pas de données à afficher</td>
                            </tr>
                        {% endfor %}
                        <!-- More people... -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
