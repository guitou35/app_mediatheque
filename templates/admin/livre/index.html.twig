{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
<div class="container mb-3">
    <h1 class="mx-auto text-center text-4xl p-4 text-theme-blue font-semibold">Gestion des Livres</h1>
    {% include 'components/_alerts.html.twig' %}

    <p class="mx-auto p-3 text-center">    <a href="{{ path('livre_new') }}" class="bttn">Ajouter</a>
    </p>
    <div class="flex md:flex-col text-left grid mb-2">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 text-theme-blue">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-center  font-medium   tracking-wider">
                                Id
                            </th>
                            <th scope="col" class="px-6 py-3 text-center  font-medium   tracking-wider">
                                Titre
                            </th>
                            <th scope="col" class="px-6 py-3 text-center  font-medium   tracking-wider">
                                DateParution
                            </th>
                            <th scope="col" class="px-6 py-3 text-center  font-medium   tracking-wider">
                                Description
                            </th>
                            <th scope="col" class="px-6 py-3 text-center font-medium  tracking-wider">
                                Management
                            </th>
                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                        {% for livre in livres %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        {{ livre.id }}
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900 text-center">{{ livre.titre }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900 text-center">{{ livre.dateParution | date("d/m/Y") }}</div>
                                </td>
                                <td class="px-6 py-4 w-1/4">
                                    <div class="text-sm text-gray-900 text-center whitespace-pre-wrap">{{ livre.description }}</div>
                                </td>

                                <td class=" whitespace-nowrap  ">
                                    <div class="flex flex-wrap flex-row items-center justify-center">
                                        <div class="bttn-blue mx-1 ">
                                            <a href="{{ path('livre_edit', {'id': livre.id}) }}">Editer</a>
                                        </div>
                                        {{ include('admin/livre/_delete_form.html.twig') }}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Pas de données à afficher</td>
                            </tr>
                        {% endfor %}
                        <!-- More people... -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
